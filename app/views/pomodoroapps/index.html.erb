<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>title</title>
    <!-- <link rel="stylesheet" href="application.css"> -->
    <link rel="stylesheets" href="stylesheets/application.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  </head>

  <!-- <p id="notice"><%= notice %></p> -->

  <body>
    

      <div class="inspiration">
        <div id="clock"></div>
        <div class="introtag">
          <h2> Howdy, Matt</h2>
        </div>
        <br>
        <div class="gap_filler"></div>
        <div class="quote">
          <strong><div id='quoteAJAX'></div></strong>
          <div id="response"></div>
          <div id="response1"></div>
          <div id="log"></div>
        </div>
      </div>
  


<!-- Add a Pomodoro coutdown section -->
<!-- This became a countdown for a new adventure and city -->

      <div class="pomodoro_countdown">
      <p class="hide_adventure_countdown">x</p>
        <div class="clockdiv_and_h1">
          <h1>New challenge and New city</h1>
          <br />
          
          <div id="clockdiv">
            <div>
              <span class="days"></span>
              <div class="smalltext">Days</div>
            </div>
            <div>
              <span class="hours"></span>
              <div class="smalltext">Hours</div>
            </div>
            <div>
              <span class="minutes"></span>
              <div class="smalltext">Minutes</div>
            </div>
            <div>
              <span class="seconds"></span>
              <div class="smalltext">Seconds</div>
            </div>
          </div>
        </div>
       
        <br>
        <br>

          <div class="buttons">
              <button id="buttonstart" onclick="startClock()">Start</button>
          </div>
        <br>
        <br>
      </div> 



<!-- Pomodoro minute countdown area  -->

     <!-- <div class="pomodoro_builder"> -->
      <div class="outerClock">
        <h1>Pomodoro Countdown</h1>
        <button id="adventure_comeback">x</button>
        <div class="pomodoro_circle">
          
          <div id="timeDiv">
            <!-- <h1>Pomodoro Countdown</h1> -->
            <br />
            <h3 class="title_2">Session Time</h3>


            <!-- By removeing the href="#" we were able to stop the pomodor clock jumping up and not working -->


            <!-- <a href="#" class="btn btn-default" id="minus5clock">-</a>  -->
            <a class="btn btn-default" id="minus5clock">-</a> 

            <!-- <h2 id="timeType"></h2> -->
            <h2 id="num">5</h2>
            <!-- <a href="" class="btn btn-default" id="add5clock">+</a>  -->
            <a class="btn btn-default" id="add5clock">+</a> 
<!--             <a href="#" class="btn btn-danger" id="reset">Reset</a> 
 -->        <a class="btn btn-danger" id="reset">Reset</a> 

          </div>

          <div id="breakDiv">
          <h3 class="title_2">Break Time</h3>
            <a class="btn btn-default" id="minus5break">-</a> 
            <h2 id="breakNum">5</h2>
            <a class="btn btn-default" id="add5break">+</a> 
          </div>
            <br />
            <a class="btn btn-default" id="start">Start</a>
        </div>  
      </div>
    <!-- </div>  -->






<!-- Add a section to record the total work done by category  -->

      

      <div class="records-of-sessions">
        <h1>Total Work Done by Category</h1>
        <div class= "sessions">
          <div class="liveandwork"></div>
          <div class="travelersandlocals"></div>
          <div class="cinegears"></div>
        </div>
        <div class="sessions2">
          <div class="wordpress"></div>
          <div class="marketing"></div>
          <div class="writing"></div>
        </div>  
        </div>
      </div>  
    <!-- </div> -->





<!-- Add a section to record the new work session -->

<div class="worksessions">
  <table class="latestworksessions">
  <h2>Latest Work Sessions</h2>
  <br>
    <thead>
      <tr>
        <th>Projectname</th>
        <!-- <th class="fffff">Name</th>
 -->        <th>Client</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pomodoroapps.each do |pomodoroapp| %>
        <tr>
          <td class="projectname"><%= pomodoroapp.projectname %></td>
          <!-- <td class="fffff"><%= pomodoroapp.name %></td> -->
          <td><%= pomodoroapp.client %></td>
          <!-- <td><%= pomodoroapp.date %></td> -->
          <td><%= pomodoroapp.time %></td> 
          <td class="show"><%= link_to 'Show', pomodoroapp %></td>
          <td class="btn btn-primary"><%= link_to 'Edit', edit_pomodoroapp_path(pomodoroapp) %></td>
          <td class="btn btn-danger"><%= link_to 'Destroy', pomodoroapp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

    <button class="btn btn-default" class="add_session"><%= link_to 'Add Session', new_pomodoroapp_path %></button>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  </body>
</html>

